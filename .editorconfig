# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ml,mli,mll,mly}]
indent_style = space
indent_size = 2

[*.{ts,js,json}]
indent_style = space
indent_size = 2

[dune]
indent_style = space
indent_size = 1

[dune-project]
indent_style = space
indent_size = 1

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false